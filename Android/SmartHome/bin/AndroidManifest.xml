<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abhishek.smarthome"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.abhishek.smarthome.StartUpActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.abhishek.smarthome.Room1Activity"
            android:label="@string/title_activity_room1" >
        </activity>
        <activity
            android:name="com.abhishek.smarthome.UserSettingActivity"
            android:label="@string/title_activity_user_settings" >
        </activity>
        <activity
            android:name="com.abhishek.smarthome.Jarvis"
            android:label="@string/title_activity_jarvis" >
        </activity>
        <activity
            android:name="com.abhishek.smarthome.JarvisSettingsActivity"
            android:label="@string/title_activity_jarvis_settings" >
        </activity>
        <activity
            android:name="com.abhishek.smarthome.Room2Activity"
            android:label="@string/title_activity_room2" >
        </activity>
        <activity
            android:name="com.abhishek.smarthome.MiscellaneousActivity"
            android:label="@string/title_activity_miscellaneous" >
        </activity>
        <activity
            android:name="com.abhishek.smarthome.OtherLights"
            android:label="@string/title_activity_other_lights" >
        </activity>
    </application>

</manifest>
